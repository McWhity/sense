	note = {Conference Name: IEEE Transactions on Geoscience and Remote Sensing},
	keywords = {Azimuth, geophysical techniques, remote sensing by radar, agriculture, backscatter, Backscatter, Soil moisture, vegetation mapping, inversion, crops, hydrological techniques, radar polarimetry, soil, soil moisture, moisture measurement, Radar measurements, L-band, Vegetation, hydrology, AD 1996, C-band, canopy, Data acquisition, Data mining, Frequency, polarization, radar cross-sections, Radar polarimetry, radar remote sensing, radar scattering, row direction, semi-empirical backscattering model, SHF, soya, soybean, UHF, water content, water mass},
	pages = {864--872},
}

